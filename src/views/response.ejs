<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Return Soon</title>

        <style>
            .response td {
                width: 50%;
                padding-top: 16px;
                padding-bottom: 16px;
            }
        </style>
</head>

<body>
    <%- include('./partials/header') %>

        <main class="container mt-5">
            <div class="row">
                <div class="col-12">
                    <a href="<%= response.paid === true ? '/page/paid' : '/page/unpaid' %>" class="text-dark"><i
                            class="fa-solid fa-chevron-left"></i><span class="px-2">Back</span></a>
                </div>
            </div>
            <div class="row response mb-5">
                <div class="col-12">
                    <h2 class="text-center mb-4 transform-uppercase">Response Detail</h2>
                    <table class="table table-striped table-hover">
                        <h4>Item Information</h4>
                        <tbody>
                            <tr>
                                <td>First Item Url</td>
                                <td>
                                    <%= response.items.firstItemUrl %>
                                </td>
                            </tr>
                            <tr>
                                <td>Second Item Url</td>
                                <td>
                                    <%= response.items.secondItemUrl %>
                                </td>
                            </tr>
                            <tr>
                                <td>Desired Size</td>
                                <td>
                                    <%= response.items.desiredSize %>
                                </td>
                            </tr>
                            <tr>
                                <td>Shipping Speed</td>
                                <td>
                                    <%= response.items.shippingSpeed %>
                                </td>
                            </tr>
                            <tr>
                                <td>Package Protection</td>
                                <td>
                                    <%= response.items.packageProtection %>
                                </td>
                            </tr>
                            <tr>
                                <td>Additional Notes</td>
                                <td>
                                    <%= response.items.additionalNotes %>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-striped table-hover">
                        <h4>Customer Information</h4>
                        <tbody>
                            <tr>
                                <td>Name</td>
                                <td>
                                    <%= response.firstName %>
                                        <%= response.lastName %>
                                </td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>
                                    <%= response.email %>
                                </td>
                            </tr>
                            <tr>
                                <td>Birthday</td>
                                <td>
                                    <%= response.birthday %>
                                </td>
                            </tr>
                            <tr>
                                <td>Phone Number</td>
                                <td>
                                    <%= response.phoneNumber %>
                                </td>
                            </tr>
                            <tr>
                                <td>Address1</td>
                                <td>
                                    <%= response.address1 %>
                                </td>
                            </tr>
                            <tr>
                                <td>Address2</td>
                                <td>
                                    <%= response.address2 %>
                                </td>
                            </tr>
                            <tr>
                                <td>City</td>
                                <td>
                                    <%= response.city %>
                                </td>
                            </tr>
                            <tr>
                                <td>State</td>
                                <td>
                                    <%= response.state %>
                                </td>
                            </tr>
                            <tr>
                                <td>Zipcode</td>
                                <td>
                                    <%= response.zipcode %>
                                </td>
                            </tr>
                            <tr>
                                <td>Country</td>
                                <td>
                                    <%= response.country %>
                                </td>
                            </tr>
                            <tr>
                                <td>Submission Date</td>
                                <td>
                                    <% let date=new Date(response.createdAt); %>
                                        <%= date.toDateString() %>
                                            <%= date.toLocaleTimeString() %>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>


        <%- include('./partials/scripts') %>
</body>

</html>